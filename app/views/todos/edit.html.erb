<h1>Editing todo</h1>

<% form_for(@todo) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <b>登録日時:</b>
    <%=h @todo.d_entry %>
    <%= f.hidden_field :d_entry %>
  </p>
  <p>
    <b>更新日時:</b>
    <%=h @todo.d_update %>
    <%= f.hidden_field :d_update %>
  </p>
  <p>
    <b>完了:</b>
    <%= check_box_tag("f_close", value = "1", checked = @todo.d_close)  %>
    <%=h @todo.d_close %>

  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @todo %> |
<%= link_to 'Back', todos_path %>
